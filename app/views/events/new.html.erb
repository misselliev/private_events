<% provide(:title, "New Event") %>

<%= form_for(:event, url: events_create_path) do |f| %>
  <div class="form-group ml-4 mr-4">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group ml-4 mr-4">
    <%= f.label :place %>
    <%= f.text_field :place, class: 'form-control' %>
  </div>
  <div class="form-group ml-4 mr-4">
    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>
  <div class="form-group ml-4 mr-4">
    <%= f.label :date_event %>
    <%= f.datetime_select :date_event, class: 'form-control' %>
  </div>
<%= f.submit 'SEND', class:'ml-4 mr-4 btn btn-primary' %>

<% end %>
