<% provide(:title, "My Events") %>

<div>
  <% @my_events.each do |i|%>
    <div class="card mb-3 ml-4 mr-4">
      <%= link_to "#{i.title}", events_show_path(id: i.id), class: "card-header text-uppercase" %>
      <p class="card-body text-capitalize"><%= i.description %></p>
      <ul>
        <li><%= i.place %></li>
        <li><%= i.date_event %></li>
      </ul>
    </div>
    <br>
  <%end%>
</div>
